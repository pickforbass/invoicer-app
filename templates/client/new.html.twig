{% extends 'base.html.twig' %}

{% block title %}Nouveau client{% endblock %}

{% block body %}
    <div class="underline">
        <h2>{{ controller_name }}</h2>
    </div>

    {{ form_start(new_client_form) }}

    <div class="form-group">
        <label for="">Nom </label>
        {{ form_widget(new_client_form.familyName) }}
    </div>

    <div class="form-group">
        <label for="">Prénom </label>
        {{ form_widget(new_client_form.name) }}
    </div>

    <div class="form-group">
        <label for="">Raison Sociale</label>
        {{ form_widget(new_client_form.SocialName) }}
    </div>

    <div class="form-group">
        <label for="">E-mail</label>
        {{ form_widget(new_client_form.email) }}
    </div>

    <div class="form-group">
        <label for="">Numéro de TVA </label>
        {{ form_widget(new_client_form.VATnumber) }}
    </div>

    <div class="form-group">
        <label for="">Adresse</label>
        {{ form_widget(new_client_form.street) }}
    </div>

    <div class="form-group">
        <label for="">Code postal</label>
        {{ form_widget(new_client_form.Zipcode) }}
    </div>

    <div class="form-group">
        <label for="">Ville</label>
        {{ form_widget(new_client_form.city) }}
    </div>

    <div class="form-group">
        <label for="">Pays</label>
        {{ form_widget(new_client_form.country) }}
    </div>

    <button type="submit">Ajouter</button>

    {{ form_end(new_client_form) }}

{% endblock %}
